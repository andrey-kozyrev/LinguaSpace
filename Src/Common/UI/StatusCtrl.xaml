<UserControl x:Class="LinguaSpace.Common.UI.StatusCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:this="clr-namespace:LinguaSpace.Common.UI"
    Padding="10"
    KeyboardNavigation.DirectionalNavigation="Cycle"
    Background="{x:Static SystemColors.ControlBrush}">
	<UserControl.Resources>
		<Style TargetType="Image">
			<Setter Property="Margin" Value="10"/>
		</Style>
		<Style TargetType="TextBlock"/>
	</UserControl.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Image Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Source="{Binding Path=ValidationImage}"/>
		<TextBlock Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Text="{Binding Path=ValidationMessage}"/>
    <Button Grid.Column="2" Grid.Row="0" Content="OK" IsDefault="True" Click="OnClickOK" IsEnabled="{Binding Path=IsValid}"/>
    <Button Grid.Column="3" Grid.Row="0" Content="Cancel" IsCancel="True"/>
  </Grid>
</UserControl>
